<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:id="@+id/translateTxt"
        android:backgroundTint="#4D4B4B"
        android:textColor="#4D4B4B"
        android:textColorHighlight="@color/black"
        android:textColorHint="#968E8E"
        android:hint="Enter text here"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:hint="Translated Text"
        android:backgroundTint="#4D4B4B"
        android:textColor="#4D4B4B"
        android:textColorHighlight="@color/black"
        android:textColorHint="#968E8E"
        android:id="@+id/outputTxt"
        />

    <Spinner
        android:id="@+id/spinnerLang"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#4D4B4B"
        android:textColor="#4D4B4B"
        android:textColorHighlight="@color/black"
        android:textColorHint="#968E8E"
        android:padding="50px"
        />

    <Button
        android:id="@+id/translateBtn"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#56798C"
        android:textColor="#FFFFFF"
        android:text="Translate" />

</LinearLayout>